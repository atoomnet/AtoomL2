<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#fff"
	android:layout_gravity="bottom">
	<ImageView android:id="@+id/splashscreen" android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:src="@drawable/l2billboard2" android:background="#fff" android:scaleType="fitXY" />
	<LinearLayout android:id="@+id/main_header" android:layout_width="fill_parent" android:layout_height="60dip"
		android:orientation="horizontal" android:background="@drawable/l2background" android:layout_gravity="center_horizontal">
		<ImageView android:id="@+id/main_header_loulou" android:layout_width="55dip" android:layout_height="55dip"
			android:src="@drawable/icon" android:scaleType="fitXY" />
		<ImageView android:id="@+id/main_header_loutube" android:layout_width="55dip" android:layout_height="55dip"
			android:src="@drawable/l2loutube" android:scaleType="fitXY" />
	</LinearLayout>
	<ViewFlipper android:id="@+id/mainflipper" android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ListView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/listview"
			android:layout_weight="1" android:headerDividersEnabled="false" android:footerDividersEnabled="true"
			android:divider="@drawable/list_divider" android:dividerHeight="1dip" android:cacheColorHint="#FFFFFF"
			android:paddingLeft="5dip"></ListView>
	</ViewFlipper>
</LinearLayout>
